<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <TextView
        android:id="@+id/sms_notif_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:ellipsize="end"
        android:lines="6"
        android:maxLines="6"
        android:text="Would you like to receive sms notifications about inventory updates?"
        />

    <Button
        android:id="@+id/sms_yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/sms_notif_popup"
        android:layout_alignTop="@id/sms_notif_popup"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="0dp"
        android:text="YES" />

    <Button
        android:id="@+id/sms_no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/sms_notif_popup"
        android:layout_alignEnd="@id/sms_notif_popup"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="0dp"
        android:text="NO" />
</RelativeLayout>